{% extends 'base.html.twig' %}

{% block body %}
   <div class="container">
       <div class="row">
           {% for category in categories %}
               <div class="col-sm-6 col-md-4">
                   <div class="card">
                       <div class="card-body text-center">
                           <a href= {{ path('app_pizza', {category: category.id}) }}>
                               <img class="img-fluid center-block" src={{ asset(category.img)}} alt="image">
                           </a>
                           <div class="card-title mb-3">Pizza {{ category.name }}</div>
                       </div>
                   </div>
               </div>
           {% endfor %}
       </div>
   </div>
{% endblock %}